doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')



  body
    if sess === undefined
      .buttons
        form(action='/sessions/new' method='get')
          input#button(type='submit', value='Sign in')
        form(action='/users/new' method='get')
          input#button(type='submit', value='Sign up')

    else
      .buttons
        form(action='/sessions/end', method='post')
          input#button(type='submit', value='Log out')
        form(action='/properties/new', method='get')
          input#propbutton(type='submit', value='Add property')

    block content
