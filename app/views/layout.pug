doctype html
html
  head
    title= title


  body
    if sess === undefined
      .buttons
        form(action='/sessions/new' method='get')
          input#button(type='submit', value='Sign in')
        form(action='/users/new' method='get')
          input#button(type='submit', value='Sign up')

    else
      .buttons
        form(action='/sessions/end', method='post')
          input#button(type='submit', value='Log out')


    block content
